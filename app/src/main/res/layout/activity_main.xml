<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    app:columnCount="2"
    app:rowCount="2"
    tools:context="com.spreys.musicalstructureapplication.MainActivity">

    <Button
        android:id="@+id/activity_main_shuffle"
        app:layout_columnWeight="1"
        app:layout_gravity="fill_horizontal"
        app:layout_rowWeight="1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/btn_shuffle_all_music" />

    <Button
        android:id="@+id/activity_main_artists"
        app:layout_columnWeight="1"
        app:layout_gravity="fill_horizontal"
        app:layout_rowWeight="1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/btn_view_all_artists" />

    <Button
        android:id="@+id/activity_main_store"
        app:layout_columnWeight="1"
        app:layout_gravity="fill_horizontal"
        app:layout_rowWeight="1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/btn_store" />

    <TextView
        android:padding="4dp"
        app:layout_columnWeight="1"
        app:layout_gravity="fill_horizontal"
        app:layout_rowWeight="1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/activity_main_explanation"/>

</android.support.v7.widget.GridLayout>
